{
    "name": "mdmec-xml-maker",
    "version": "2.0.6",
    "description": "A package to create Amazon Prime v2.9 MEC and MMC xml file",
    "main": "dist/main.js",
    "directories": {
        "test": "test"
    },
    "scripts": {
        "test": "jest",
        "build": "rm -rf dist && tsc",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "lint": "eslint --ext=.ts .",
        "lint:fix": "eslint --ext=.ts ./src ./test --fix",
        "prepare": "husky install",
        "lint-staged": "lint-staged"
    },
    "lint-staged": {
        "*.{js,ts,md}": [
            "prettier --write"
        ],
        "*.ts": "eslint --cache --fix"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/IdrisAkintobi/amazon-prime-mdmec-xml-maker.git"
    },
    "keywords": [
        "mdmec",
        "movielabs",
        "amazon prime"
    ],
    "author": "Idris Akintobi",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/IdrisAkintobi/amazon-prime-mdmec-xml-maker/issues"
    },
    "homepage": "https://github.com/IdrisAkintobi/amazon-prime-mdmec-xml-maker#readme",
    "dependencies": {
        "fast-xml-parser": "^4.3.2"
    },
    "devDependencies": {
        "@types/jest": "^29.5.10",
        "@typescript-eslint/eslint-plugin": "^6.12.0",
        "@typescript-eslint/parser": "^6.12.0",
        "eslint": "^8.54.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.1",
        "husky": "^8.0.3",
        "jest": "^29.7.0",
        "lint-staged": "^15.1.0",
        "prettier": "^3.1.0",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.3.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "test",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
